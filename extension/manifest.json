{
    "manifest_version": 3,
    "name": "Clarity Pearl: The Sovereign Extension",
    "version": "1.0.0",
    "description": "The Invisible Hand of Market Intelligence.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/in/*",
                "https://*.myshopify.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}